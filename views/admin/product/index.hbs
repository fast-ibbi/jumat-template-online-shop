<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold">Product Management</h2>
                <a href="/admin/products/new" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Product
                </a>
            </div>

            <!-- Products Table -->
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Image</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Category</th>
                            <th scope="col">Stock</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="productTableBody">
                        {{#each products}}
                        <tr data-product-id="{{this.id}}">
                            <th scope="row">{{this.id}}</th>
                            <td>
                                <img src="{{this.image}}" alt="{{this.name}}" style="width: 50px; height: 50px; object-fit: cover;">
                            </td>
                            <td>{{this.name}}</td>
                            <td>Rp {{this.price}}</td>
                            <td>{{this.category}}</td>
                            <td>
                                <span class="badge {{#if this.inStock}}bg-success{{else}}bg-danger{{/if}}">
                                    {{#if this.inStock}}In Stock{{else}}Out of Stock{{/if}}
                                </span>
                            </td>
                            <td class="text-center">
                                <a href="/admin/products/{{this.id}}/edit" class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <button class="btn btn-sm btn-danger" onclick="deleteProduct({{this.id}})">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </td>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                                <p class="mb-0 mt-2">No products found. Add your first product!</p>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>