<!-- Header-->
<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Shop in style</h1>
            <p class="lead fw-normal text-white-50 mb-0">With this shop hompeage template</p>
        </div>
    </div>
</header>

<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            {{#each products}}
            <div class="col mb-5">
                <div class="card h-100">
                    {{#unless inStock}}
                    <!-- Out of stock badge-->
                    <div class="badge bg-danger text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Out of Stock</div>
                    {{/unless}}
                    <!-- Product image-->
                    <img class="card-img-top" src="{{image}}" alt="{{name}}" />
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">{{name}}</h5>
                            <!-- Product category-->
                            <div class="small text-muted mb-2">{{category}}</div>
                            <!-- Product price-->
                            <div class="fw-bold">Rp {{price}}</div>
                        </div>
                    </div>
                    <!-- Product actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center">
                            {{#if inStock}}
                            <a class="btn btn-outline-dark mt-auto" href="/product/{{id}}">View Details</a>
                            {{else}}
                            <button class="btn btn-outline-secondary mt-auto" disabled>Out of Stock</button>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
            
            {{#unless products}}
            <div class="col-12 text-center">
                <h4 class="text-muted">No products available at the moment.</h4>
            </div>
            {{/unless}}
        </div>
    </div>
</section>